{
  "$schema": "http://json.schemastore.org/template",
  "author": "Beacon Tower",
  "classifications": [
    "Library",
    "NuGet",
    "Common"
  ],
  "identity": "BeaconTower.Library.CSharp",
  "name": "Beacon Tower .NET Library",
  "shortName": "bt-lib",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "MyLib",
  "preferNameDirectory": false,
  "description": "Modern .NET 10 library template for creating reusable NuGet packages with best practices, testing, and CI/CD",
  "symbols": {
    "nameLower": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "name",
        "toLower": true
      }
    },
    "repoName": {
      "type": "generated",
      "generator": "regex",
      "datatype": "string",
      "parameters": {
        "source": "nameLower",
        "steps": [
          {
            "regex": "\\.",
            "replacement": "-"
          }
        ]
      },
      "replaces": "mylib"
    },
    "Description": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "A reusable library for Beacon Tower projects",
      "defaultValue": "A reusable library for Beacon Tower projects",
      "description": "Library description for NuGet package metadata"
    },
    "GitHubOrg": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "beacontower",
      "defaultValue": "beacontower",
      "description": "GitHub organization name for package feed and repository URL"
    },
    "Author": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "Beacon Tower",
      "defaultValue": "Beacon Tower",
      "description": "Author name for package metadata and copyright"
    },
    "IncludeExamples": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Include example Calculator class and tests"
    },
    "EnableSourceLink": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Enable SourceLink for debugging support"
    },
    "GenerateDocumentation": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Generate XML documentation file for IntelliSense"
    },
    "SkipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Skip running 'dotnet restore' after project creation"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!IncludeExamples)",
          "exclude": [
            "**/Calculator.cs",
            "**/CalculatorTests.cs"
          ]
        },
        {
          "exclude": [
            "**/bin/**",
            "**/obj/**",
            "**/.vs/**",
            "**/.vscode/**",
            "**/.git/**",
            "**/node_modules/**",
            "**/*.user",
            "**/*.suo",
            "**/.DS_Store",
            "**/TestResults/**",
            "**/coverage/**",
            "**/.idea/**",
            "BeaconTower.Templates.Lib.csproj"
          ]
        }
      ]
    }
  ],
  "postActions": [
    {
      "condition": "(!SkipRestore)",
      "description": "Restore NuGet packages",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore' to restore NuGet packages"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ],
  "primaryOutputs": [
    {
      "path": "MyLib.sln"
    }
  ]
}
